	+MISSILE
    +NOTELEPORT
    +MOVEWITHSECTOR
    +CLIENTSIDEONLY
    +BLOODLESSIMPACT 
	+DONTSPLASH
	+THRUGHOST
	+thrUACTORS
	+FLOORCLIP;
	damagetype "Blood";
	SeeSound "misc/xdeath4";
	DeathSound "misc/xdeath1";
	Decal "BrutalBloodSuper";
	Mass 1;
	Gravity 0.4;
}

private uint sprite_name;

void set_sprite_type(uint i)
{
	sprite_name = i;
}

States
{
	xme1 a 0;
	xme2 a 0;
	xme3 a 0;
	xme4 a 0;
	xme5 a 0;
	xme7 a 0;
	xme8 a 0;

	Spawn:
		TNT1 A 0 nodelay
		{
			switch(sprite_name)
			{
				case 0:
				default:
					sprite = getspriteindex("XME1");
				break;

				case 1:
					sprite = getspriteindex("XME2");
				break;

				case 2:
					sprite = getspriteindex("XME3");
				break;

				case 3:
					sprite = getspriteindex("XME4");
				break;

				case 4:
					sprite = getspriteindex("XME5");
				break;

				case 5:
					sprite = getspriteindex("XME7");
				break;

				case 6:
					sprite = getspriteindex("XME8");
				break;
			}
		}
	spawn_loop:
		"####" ABCD 3
		{
			vel.z --;
			doomb_for_khorne("doomb_red_blood_trail", (0, 0, 0 ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		}
	loop;

	Death:
		TNT1 AAAAAAA 0 doomb_for_khorne("doomb_red_blood_trail", (0, 0, 0), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		TNT1 A 0 A_CheckFloor("SpawnFloor");
		TNT1 A 0 A_SpawnItemEx ("CeilBloodLauncher",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION,0);
		TNT1 A 0 doomb_meat_on_ceiling();
	Stop;
		
	SpawnFloor:
		"####" E 3400 A_SpawnItem ("Brutal_BloodSpot", 0, 1);
	stop;
}

