		TNT1 A 1900 doomb_spawn_bloodpool(BPS_SMALL);
	Loop;
	
	Death:
		TNT1 AAAAAAA 0 doomb_for_khorne("doomb_red_blood_trail", (0, 0, 0 ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		TNT1 A 0 doomb_spawn_bloodpool(BPS_SMALL);
		XDT3 BCDEFGH 3;
	Death.Crush:
		TNT1 AA 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
		CRSB A 9009;
	Stop;
}

}