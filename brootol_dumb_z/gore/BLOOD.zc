//All the liquid gore stuff goes here.

//cause slowdown
CLASS TinyBlood : doomb_blood { 
	Default {
		scale 0.2;
		speed 7;
		health 1;
		radius 8;
		height 1;
		+DontSplash;
		Gravity 0.7;
		Decal "BrutalBloodSplat";
		XScale 0.4;
		YScale 0.8;
		+MISSILE;
		+CLIENTSIDEONLY;
		+NOTELEPORT;
		+NOBLOCKMAP;
		+FORCEXYBILLBOARD;
		-EXPLODEONWATER;
		+DOOMBOUNCE;
	}
	States
	{
		Spawn:
			tnt1 a 0 nodelay {scale *= frandom(0.8, 1.2);}
		mini:
			TNT1 A 0 A_JumpIf(waterlevel > 1, "Splash");
			BLUD Z 1
			{
				if(pos.z <= floorz)
					setstatelabel("death");
			}
		loop;
			
		Splash:
			TNT1 A 0 A_SpawnProjectile ("Underblood1", 7, 0, random (0, 360), 2, - random (30, 150));
		stop;

		Death:
			TNT1 A 0 A_PlaySound("blooddrop3");
			XDT1 EFGHIJKL 2;
			TNT1 A 0 A_SpawnItem("MediumBloodSpot");
		stop;
	}
}











