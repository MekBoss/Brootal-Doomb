CLASS BootSmearerRed: GrowingBloodPool { 
	Default {
		
		MONSTER;
		-SOLID;
		+NOCLIP;
		+THRUACTORS;
		-COUNTKILL;
		+LOOKALLAROUND;
		-FRIENDLY;
		Radius 0;
		Height 0;
	}
	states
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 1 A_Look;
			Goto See;
			
		See:
			TNT1 A 1 A_Chase(",");
			TNT1 A 0 A_Die("LookForPlayer");
		Death:
