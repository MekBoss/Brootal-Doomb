class doomb_proto_torch_tall : doomb_decoration_base  abstract
{
Default
{
	ProjectilePassHeight -16;
	height 85;
	radius 10;
	+LOOKALLAROUND;
	-SHOOTABLE;
	+INVULNERABLE;
	+NOBLOOD;
	+GHOST;
	+RANDOMIZE;
	+DONTTHRUST
	Mass 900000;
	scale .5;
}

}

CLASS TallTorch_Red : doomb_proto_torch_tall replaces RedTorch
{ 
states
{
	Spawn:
		TTRB A 0;
		TNT1 A 0 A_Playsound("BDFireplace2", 1, 1, 1);
	Stay:
		TNT1 A 0 bright doomb_show_effect("RealFlameTrailsSmall", (0, 0, 58), (frandom(-0.3, 0.3), frandom(-0.3, 0.3), frandom(0.5, 1) ) );
		TTRB AC 2 A_SpawnItem("RedFlare22",0,59);
	Loop;
}

}

