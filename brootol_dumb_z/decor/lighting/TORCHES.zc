		TNT1 A 1;
		
	Stay:
		TNT1 A 0 bright A_SpawnItem("YellowFlareSmall22Long",0,16);
		CAND CCCB 1 bright light("SMALLREDTORCH");
		TNT1 A 0 bright A_SpawnItem("YellowFlareSmall22Long",0,16);
		CAND BCBB 1 bright light("SMALLREDTORCH");
	Loop;
}
}











CLASS TorchFlare : ACTOR { 
Default {
	
	+NOINTERACTION;
	+NOGRAVITY;
	+CLIENTSIDEONLY;
	+FORCEXYBILLBOARD;
	renderstyle "Add";
	radius 1;
	height 1;
	alpha 0.4;
}
}

CLASS RedTF : TorchFlare { 
states
{
	Spawn:
	Spawn:
		TNT1 A 0;
		TNT1 A 0 A_Jump(128,2);
		FLAR A 2 bright;
		stop;
		TNT1 A 0;
		FLAR B 2 bright;
		stop;
}
}