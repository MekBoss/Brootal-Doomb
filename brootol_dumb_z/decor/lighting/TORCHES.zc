CLASS Candelabra1 : Candelabra replaces Candelabra { 
Default {
	+LOOKALLAROUND;
	+INVULNERABLE;
	+NOBLOOD;
	+FORCEYBILLBOARD;
	+GHOST;
	+RANDOMIZE;
	Mass 900000;
	scale 0.7;
}
states
{
	Spawn:
	Stay:
		TNT1 A 0 bright A_SpawnItem("YellowFlare22",0,61);
		CBRA CC 1 bright light("BIGREDTORCH");
		TNT1 A 0 bright A_SpawnItem("YellowFlare22",0,61);
		CBRA BC 1 bright light("BIGREDTORCH");
		TNT1 A 0 bright A_SpawnItem("YellowFlare22",0,61);
		CBRA BC 1 bright light("BIGREDTORCH");
		TNT1 A 0 bright A_SpawnItem("YellowFlare22",0,61);
		CBRA BB 1 bright light("BIGREDTORCH");
	Loop;
}
}

