
CLASS CacoXdeath1 : doomb_body_base
{ 
Default
{
	translation "168:191=192:207";
	Radius 8;
	Height 8;
	Speed 9;
	Scale 1.1;
	Mass 1;
	+NOBLOCKMAP;
	+MISSILE;
	+NOTELEPORT;
	+MOVEWITHSECTOR;
	+CLIENTSIDEONLY;
	+BLOODLESSIMPACT;
	SeeSound "misc/xdeath4";
	DeathSound "misc/xdeath1";
	Decal "BlueBloodSplat";
}

States
{
	Spawn:
		TNT1 AAAAAAAAAA 0
		{
			actor a = doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", color: BCF_BLUE);
		}
		TNT1 A 0 A_JumpIf(waterlevel > 1, "null");
		CCP1 A 4
		{
			actor a = doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", color: BCF_BLUE);
		}
	Loop;

	Death:
		TNT1 AAAAAAAAAAAAAAAAAAAAAAAAAAA 0
		{
			actor a = doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", color: BCF_BLUE);
		}
		CCP1 B 3500
		{
			doomb_spawn_bloodpool(BPS_SMALL);
			frame += random(0, 1);
		}
	stop;
}
}


