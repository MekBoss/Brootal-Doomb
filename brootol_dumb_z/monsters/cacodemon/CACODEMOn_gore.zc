CLASS caco_with_head_hole : doomb_body_base
{ 
Default {
	Radius 24;
	Height 48;
	Health 250;
	
	damagefactor "mini_gun", 0.6;
	bloodtype "Blue_Blood";
	bloodcolor "darkblue";
	-SOLID;
	+NOBLOODDECALS;
	+SHOOTABLE;
	+FLOORCLIP;
	+DONTSPLASH;
	+NOPAIN;
	+dontthrust
	Scale 1.0;
}
States
{
	Spawn:
		TNT1 A 0 nodelay
		{
			if(random(0, 10) < 2)
				a_die("no_suffer");
		}
		CCD1 AAEEAAEEAAAAEEAAEEAA 5
		{
			actor a = doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, 30), (frandom(-7, 7), frandom(-7, 7), frandom(0, 7) ), color: BCF_BLUE);

			if(health <= 120)
				setstatelabel("caco_no_head");
		}
		tnt1 a 0 a_die("head_hole");
	death.head_hole:
		CCD1 ABC 6;
		CCD1 C -1 doomb_final_absolution(12, 24);
	Stop;
		
	death.no_suffer:
		TNT1 a 0 A_NoBlocking;
		TNT1 A 0 doomb_severed_limb("CacoXDeath", "spawn", (0, 0, 50) );
		CCD2 B -1 doomb_final_absolution(12, 24);
	Stop;

	caco_no_head:
		TNT1 A 0 A_SpawnProjectile ("CacoXDeath", 50, 0, random (0, 360), 2, random (20, 40));
		CCD2 AAEEAAEEAAAAEEAAEEAA 5
		{
			actor a = doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, 30), (frandom(-7, 7), frandom(-7, 7), frandom(0, 7) ), BCF_BLUE);
		}
		tnt1 a 0 a_die("wound_no_head");
	death.wound_no_head:
		CCD2 B -1 doomb_final_absolution(12, 24);
	Stop;
		
	Death:
		TNT1 AAAAA 0
		{
			actor a = doomb_for_khorne("PlayerFlyingBlood", "spawn", (0, 0, 15), (random(-3,3), random(-3, 3), frandom(0, 3) ), BCF_BLUE);
		}

		TNT1 AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA 0
		{
			actor a = doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", color: BCF_BLUE);
		}
		TNT1 AA 0 doomb_severed_limb("CacoXDeath6", "spawn", (0, 0, 30), limb_ignore_cvar: true);
		TNT1 AAAAA 0 doomb_severed_limb("CacoXDeath7", "spawn", (0, 0, 30), limb_ignore_cvar: true);
		TNT1 A 0 a_givetotarget("CrueltyBonus5Health");
		CCD3 A 10;
		CCD3 B -1 doomb_final_absolution(12, 24);
	Stop;

}
	
}