CLASS DyingHellKnight : doomb_body_base
{ 
	Default {
		
		Radius 12;
		Height 30;
		Speed 9;
		Health 70;
		PainSound "PSXDPN";
		DeathSound "grunt/death";
		damagefactor "Kick", 0.1;
		damagefactor "Crush", 2.0;
		damagefactor "Fatality", 20.1;
		PainChance "Kick", 255;
		+SHOOTABLE;
		+FLOORCLIP;
		+LOOKALLAROUND;
		+FRIGHTENED;
		+FLOORCLIP;
		-SOLID;
		+THRUACTORS;
	}
	States
	{
		Spawn:
			BTC1 A 1 A_Look;
		Loop;

		See:
			BTC1 ABC 10 A_Chase;
			TNT1 A 0 doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, random(20, 30) ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
			BTC1 D 10 A_Pain;
			tnt1 a 0 a_jumpif(random(0, 10) < 1, "death");
		Loop;

		Pain.Kick:
			TNT1 A 0 doomb_severed_limb("Teeth", "spawn", (0, 0, 30), doomb_random_velocity(5));
			TNT1 A 0 doomb_for_khorne("brutal_Blood", "spawn", (0, 0, 30), doomb_random_velocity(5));
			TNT1 A 0 A_Givetotarget("CrueltyBonus1health");
			TNT1 A 0 A_Pain;
			TNT1 A 0 A_FaceTarget;
			BTCK ABA 3;
			BTC1 B 20;
		Goto See;
			
		Death.Kick:
		Death.Fatality:
			tnt1 A 0
			{
				doomb_monster_fatality_camera(target);
				A_Pain();
				A_NoBlocking();
				A_BossDeath();
			}
			HKF2 AAB 6;
			tnt1 A 0 A_PlaySound("PSXDPN", CHAN_AUTO, 1);
			HKF2 DEFFGH 8;
			tnt1 a 0 Radius_Quake (4, 24, 0, 15, 0);
			tnt1 A 0 A_PlaySound("PSXDPN", CHAN_AUTO, 1);
			HKF2 IJIJIJ 4;
			tnt1 A 0 ACS_Execute(580, 0, 0, 0, 0);
			tnt1 A 0 ACS_Execute(581, 0, 0, 0, 0);
			tnt1 A 0 ACS_Execute(582, 0, 0, 0, 0);
			tnt1 A 0 ACS_Execute(583, 0, 0, 0, 0);
			tnt1 AAAAAA 0 doomb_sticky_guro(SGT_BLOOD);
			TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ), BCF_GREEN);
			tnt1 AA 0 doomb_for_khorne("brutal_Blood", "spawn", (0, 0, 30), doomb_random_velocity(5));
			tnt1 AAAAAAAAAA 0 doomb_for_khorne("PlayerFlyingBlood", "spawn", (0, 0, 50), doomb_random_velocity(5));
			HKF2 KL 6;
			tnt1 A 0 doomb_severed_limb("XDeathHellKnightHead", "spawn", (0, 0, 64), doomb_random_velocity(5) );
			HKF2 MNNNNN 6;
			tnt1 A 0 
			{
				A_Givetotarget("HealthBonus",10);
				doomb_severed_limb("OmgSoDeadHK");
				doomb_destroy_monster_fatality_camera();
			}
		Stop;
			
		Death:
			TNT1 A 0 A_NoBlocking;
			TNT1 A 0 A_Pain;
			TNT1 A 0 A_SpawnItem ("DeadKnightHalfUp");
			Stop;
			
			
		Death.Stomp:
		Death.SSG:
		XDeath:
			TNT1 A 0 doomb_blood_mist('doomb_non_interactive_blood', 'blood_mist', (0, 0, 5), 6);
			TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ), BCF_GREEN);
			TNT1 a 0 A_Givetotarget("CrueltyBonus5Health");
			TNT1 A 0 doomb_severed_limb("CrushedRemains");
			TNT1 A 1 A_XScream;
			TNT1 A 1 A_NoBlocking;
			TNT1 A -1;
			Stop;
	}
}