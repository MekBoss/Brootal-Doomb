
CLASS DyingHellKnight1 : doomb_body_base { 
	Default {
		Radius 16;
		Height 50 + 22;
		doomb_monster_base.head_starting_position 55;
		Health 100;
		damagefactor "Blood", 0.0;
		damagefactor "BlueBlood", 0.0;
		damagefactor "GreenBlood", 0.0;
		
		damagefactor "Cutless", 0.6;
		Mass 999999;
		-SOLID;
		+SHOOTABLE;
		+FLOORCLIP;
		+NOPAIN;
		+DONTSPLASH;
		Scale 1.1;
	}
	States
	{
		Spawn:
			KSA1 ABCB 6;
			TNT1 A 0 doomb_blood_dying();
			TNT1 A 0 A_PlaySound ("PSXDPN");
			tnt1 a 0 a_jump(200, "spawn");
		Death:
			TNT1 A 0 A_NoBlocking;
			TNT1 A 0 A_Fall;
			TNT1 A 0 A_PlaySound("knight/death");
			BTN3 ABCD 6;
			TNT1 A 0 doomb_severed_limb("DeadHellKnightNoArm");
		Stop;
			
		Death.Headshot:
			TNT1 A 0 A_NoBlocking;
			TNT1 A 0 A_Fall;
			TNT1 A 0 A_PlaySound("misc/xdeath4");
			TNT1 A 0 doomb_severed_limb("HellKnightHeadExplode", "spawn", (0, 0, 62) );
			BTN4 ABCD 6;
			TNT1 A 0 A_Givetotarget("CrueltyBonus5Health");
			TNT1 A 0 doomb_severed_limb("DeadHellKnightNoArmNoHead");
		Stop;
			
			
		Death.SSG:
		XDeath:
		Death.Explosive_Impact:
			TNT1 A 0 A_XScream;
			TNT1 A 0 A_Givetotarget("CrueltyBonus5Health");
			TNT1 A 0 A_NoBlocking;
			TNT1 A 0 doomb_severed_limb("KnightXDeath");
		Stop;
			
		Death.Cutless:
			TNT1 A 0 A_Scream;
			TNT1 A 0 A_NoBlocking;
			TNT1 AAA 0 doomb_severed_limb("Intestine", "spawn", (0, 0, 32), (frandom(-10, 10), frandom(-10, 10), frandom(0, 10) ) );
			TNT1 A 0 doomb_severed_limb("XDeathHellKnightArm", "spawn", (0, 0, 32), doomb_random_velocity(5));
			TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ), BCF_GREEN);
			TNT1 A 0 doomb_severed_limb("XDeathHellKnightHead", "spawn", (0, 0, 32), doomb_random_velocity(5));
			BBO1 AABCD 8;
			TNT1 A 0 doomb_spawn_bloodpool();
			TNT1 A 0 doomb_severed_limb("DeadKnightHalfDown");
		Stop;
	}
	
}






CLASS HellKnightHead: LimbBase { 
	Default {
		
		damagefactor "Kick", 9.0;
		damagefactor "Melee", 9.0;
		-CLIENTSIDEONLY;
		+SHOOTABLE;
		-NOBLOCKMAP;
		+SOLID;
		+THRUACTORS;
		damagefactor "Crush", 50.0;
		Radius 10;
		Mass 60;
		Health 60;
		Scale 1.0;
	}
	States
	{
		Spawn:
			HKHE G 1900 doomb_spawn_bloodpool(BPS_SMALL);
		Loop;
		
		Death:
			TNT1 A 0 A_PlaySound("misc/xdeath4");
			TNT1 A 0 doomb_severed_limb("HellKnightHeadExplode", "spawn", (0, 0, 40) );
		Stop;

		Death.Trample:
		Crush:
			TNT1 AAAAAAAA 0 doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, random(20, 30) ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
			TNT1 A 0 A_PlaySound("misc/xdeath4");
			CRS1 B 9009;
		Stop;

		Death.plasma:
			TNT1 A 0 doomb_severed_limb("XDeathBurnedSkull", "spawn", (0, 0, 32), doomb_random_velocity(5));
			EXPL A 0 doomb_show_effect("ExplosionSmoke", (0, 0, 0), (frandom(-0.5, 0.5), frandom(-0.5, 0.5), frandom(-0.5, 1) ) );
		Stop;

		Death.punch:
		Death.Kick:
			HKHE DD 1 A_FaceTarget;
			TNT1 A 0 doomb_severed_limb("XDeathHellKnightHead", "spawn", (0, 0, 15), doomb_random_velocity(5) );
			TNT1 A 0 A_PlaySound("misc/xdeath4", 1);
			TNT1 A 0 A_PlaySound("player/cyborg/fist", 3);
		Stop;
			
		Pain:
			TNT1 A 0 ThrustThingZ(0,20,0,1);
			HKHE ABCDEFGH 2;
		Goto Spawn;
			
		Death.Explosive_Impact:
			TNT1 A 0;
			TNT1 A 0 ThrustThingZ(0,50,0,1);
			HKHE ABCDEFGH 3;
			HKHE H 0 doomb_severed_limb("HellKnightHead");
		Stop;
	}
	
}


