CLASS XDeathdoomb_fatsoHead: XDeathArm1 { 
	Default {
		
		-CLIENTSIDEONLY;
		Scale 0.9;
	}
	States
	{
		Spawn:
			TNT1 A 0 doomb_spawn_bloodpool(BPS_SMALL);
			TNT1 A 0 A_JumpIf(waterlevel > 1, "Death");
			TNT1 A 0 A_JumpIf(vel.z == 0, "Death");
			XHE7 ABCDEFGH 3;
			Loop;
		Death:
			TNT1 A 0 doomb_spawn_bloodpool(BPS_SMALL);
			XHE5 A 1;
			XHE5 A 1 A_SpawnItem("doomb_fatsoHead",0,0,0,1);
			Stop;
	}
}



CLASS doomb_fatsoHead: LimbBase { 
	Default {
		
		damagefactor "Kick", 9.0;
		damagefactor "Melee", 9.0;
		-CLIENTSIDEONLY;
		Radius 10;
		
		Mass 120;
		Health 60;
		Scale 0.9;
	}
	States
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 0 doomb_spawn_bloodpool(BPS_SMALL);
			TNT1 A 0 A_JUmp(128, "Spawn2");
			
		Spawn1:
			XHE7 B 1900;
			Loop;
			
		Spawn2:
			XHE7 G 1900;
			Loop;
			
		Death:
			TNT1 A 0;
			TNT1 A 0 A_SpawnItem("doomb_fatsoHeadExplode", 0, 10);
			Stop;
		Death.Trample:
		Crush:
			TNT1 AAAAAAAA 0 doomb_for_khorne("doomb_red_blood_trail", (0, 0, 0 ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
			TNT1 A 0 A_PlaySound("misc/xdeath4");
			CRS1 B 9009;
			Stop;
		Death.plasma:
			TNT1 A 0;
			TNT1 A 0 A_SpawnProjectile ("XDeathBurnedSkull", 32, 0, random (0, 360), 2, random (0, 160));
			EXPL A 0 doomb_show_effect("ExplosionSmoke", (0, 0, 0), (frandom(-0.5, 0.5), frandom(-0.5, 0.5), frandom(-0.5, 1) ) );
			TNT1 A 0;
			Stop;
		Death.punch:
		Death.Kick:
			XHE7 A 1 A_Pain;
			XHE7 A 1 A_FaceTarget;
			TNT1 A 0 A_NoBlocking;
			TNT1 A 0 A_SpawnProjectile ("XDeathdoomb_fatsoHeadKicked", 5, 0, random (170, 190), 2, random (20, 40));
			TNT1 A 0 A_PlaySound("misc/xdeath4", 1);
			TNT1 A 0 A_PlaySound("player/cyborg/fist", 3);
			TNT1 A 20;
			Stop;
			
		Pain:
			TNT1 A 0;
			TNT1 A 0 ThrustThingZ(0,20,0,1);
			XHE7 ABCDEFGH 2;
			Goto Spawn;
			
		Death.Explosive_Impact:
			TNT1 A 0 A_NoBlocking;
			TNT1 A 0 ThrustThingZ(0,50,0,1);
			XHE7 ABCDEFGH 3;
			XHE7 I 0 A_SpawnItem("doomb_fatsoHead");
			Stop;
			
			
	}
	
}


