		CARB L -1;
	Stop;

	Death.Cut:
	Death.Saw:
		TNT1 A 0;
		TNT1 A 0 A_SpawnProjectile ("XDeathdoomb_fatsoArm", 0, 0, random (0, 360), 2, random (0, 160));
		TNT1 AA 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
		TNT1 A 0 A_SpawnItem ("DeadFatNoArm", 1);
	stop;

