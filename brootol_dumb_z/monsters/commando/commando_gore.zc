CLASS BrutalizedCommando1 : doomb_body_base
{
Default
{
	Radius 16;
	Height 50;
	Health 300;
	PainSound "grunt/pain";
	Mass 999999;
	-SOLID;
	+SHOOTABLE;
	+FLOORCLIP;
	+DONTSPLASH;
	+nopain
	Scale 1.0;
}
States
{
	Spawn:
		CPOD JJJJJJJJJJJJJJJJJJJJJJJJJJJJJJ 1
		{
			if(health <= 200)
				setstatelabel("no_hand");
			if(random(0, 10) == 10)
				doomb_for_khorne("PlayerFlyingBlood", "spawn", (0, 0, 23), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		}
		CPOD K 6
		{
			A_SpawnItem ("MiniGun", 0, 5,0);
			doomb_severed_limb("BrutalizedDeadCommando1", limb_ignore_cvar: true);
		}
	Stop;

	//BrutalizedCommando2	
	no_hand:
		TNT1 A 0 doomb_much_blood(0);
		TNT1 A 0 doomb_severed_limb("XDeathChainArm", "spawn", (0, 0, 45), doomb_random_velocity(3) );
		TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
		TNT1 A 0 A_PlaySound("chainguy/death");
		CPOD MNMNMNMNMNMNMNMNMNMNMNMNMNMNMNMNMNMN 1
		{
			if(health <= 100)
				setstatelabel("just_torso");
			if(random(0, 10) == 10)
				doomb_for_khorne("PlayerFlyingBlood", "spawn", (0, 0, 23), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		}
		CPOD O 5
		{
			doomb_severed_limb("BrutalizedDeadChaingunGuy", limb_ignore_cvar: true);
			A_SpawnItem ("MiniGun", 0, 5,0);
		}
	Stop;

	//BrutalizedCommando3	
	just_torso:
		TNT1 A 0 doomb_severed_limb("eye", "spawn", (0, 0, 50), doomb_random_velocity(7) );
		TNT1 A 0 doomb_severed_limb("head_piece_dark", "spawn", (0, 0, 50), doomb_random_velocity(7) );
		TNT1 A 0 doomb_severed_limb("jaw", "spawn", (0, 0, 50), doomb_random_velocity(7) );
		TNT1 AAAAAA 0 doomb_for_khorne("brutal_Blood", "spawn", (0, 0, 50), doomb_random_velocity(7) );
		TNT1 AAAAAAAAA 0 doomb_severed_limb("SmallBrainPiece", "spawn", (0, 0, 50), doomb_random_velocity(7) );
		tnt1 a 0 doomb_spray_decal("BrutalBloodSuper", times: 5);
		TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
		CPOD P 5;
		CPOD QQQQQQQQQQ 10 doomb_for_khorne("brutal_Blood", "spawn", (0, 0, 50), doomb_random_velocity(7) );
		CPOD R 5;
		TNT1 A 0 doomb_severed_limb("BrutalizedDeadChaingunGuy", limb_ignore_cvar: true);
	Stop;

	Death:
		TNT1 A 0 a_givetotarget("CrueltyBonus5Health");
		TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
		TNT1 A 0 A_SpawnItem ("MiniGun", 0, 5,0);
		CPOD S -1 doomb_final_absolution(12, 12);
	Stop;
}

}



