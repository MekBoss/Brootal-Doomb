CLASS DeadChaingunguy_Slumped: CurbstompedMarine { 
Default {
	
	damagefactor "Crush", 50.0;
	damagefactor "Blood", 0.0;
	damagefactor "Trample", 0.0;
	//+NORADIUSDMG
	+NOPAIN;
	+CORPSE;
	
	Mass 6000;
	damagefactor "Crush", 50.0;
	damagefactor "Blood", 0.0;
	damagefactor "Trample", 0.0;
	//+NORADIUSDMG
	+NOPAIN;
	+CORPSE;
	
	
	+NOPAIN;
	Health 200;
	Height 45;
	doomb_monster_base.head_starting_position 22;
	Radius 6;
	Scale 0.9;
}

States
{
	Spawn:
		TNT1 A 0 nodelay A_Recoil(6);
		BR95 A 6;
		TNT1 A 0 A_JumpIf(vel.x == 0 && vel.y == 0, "LayDown");
		BR95 A 16;
	Loop;

	LayDown:
		TNT1 A 0 A_NoBlocking;
		TNT1 A 0 doomb_severed_limb("Deaddoomb_commando", limb_ignore_cvar: true);
	Stop;

	XDeath:
	Death.Explosive_Impact:
		TNT1 A 0 A_NoBlocking;
		TNT1 A 0 doomb_severed_limb("ChainXDeath");
	Stop;
		
	Death.Headshot:
		TNT1 A 0 A_NoBlocking;
		TNT1 A 0 doomb_severed_limb("ChaingunguyHeadExplode");
		TNT1 A 0 doomb_severed_limb("DeadChaingunguy_Slumped_NoHead", limb_ignore_cvar: true);
	Stop;
		
	Death:
		TNT1 A 0 A_NoBlocking;
		TNT1 AAA 0 doomb_severed_limb("Intestine", "spawn", (0, 0, 32), (frandom(-10, 10), frandom(-10, 10), frandom(0, 10) ) );
		TNT1 A 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
		TNT1 AAAA 0 doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, random(20, 30) ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		TNT1 AAAA 0 doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, 32), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		TNT1 AAAA 0 doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, random(20, 30) ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
		tnt1 a 0 doomb_spray_decal("BrutalBloodSuper", times: 5);
		TNT1 AAAA 0 doomb_for_khorne("doomb_non_interactive_blood", "blood_impact_splash", (0, 0, height/2) );
		TNT1 A 0 doomb_severed_limb("XDeathChainArm", "spawn", (0, 0, 40), doomb_random_velocity(7) );
	Stop;
}

}		
		
		
