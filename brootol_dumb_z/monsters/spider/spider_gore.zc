
CLASS SpiderLeg : doomb_body_base
{ 
	Default {
		
		Radius 8;
		Height 8;
		Speed 12;
		Mass 1;
		+NOBLOCKMAP;
		+MISSILE;
		+NOTELEPORT;
		+DONTSPLASH;
		+DOOMBOUNCE;
		+MOVEWITHSECTOR;
		+CLIENTSIDEONLY;
		SeeSound "misc/xdeath4";
		DeathSound "misc/xdeath3";
		BounceFactor 0.3;
		BounceCount 3;
	}
	States
	{
		Spawn:
			TNT1 A 0 A_JumpIf(waterlevel > 1, "Death");
			XDSL ABCDEFGH 2;
		Loop;
		
		Death:
			XDSL I 9009;
		Stop;
	}
}


