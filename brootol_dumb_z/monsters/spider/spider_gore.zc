CLASS CrawlingDyingSpider : doomb_body_base { 
	Default {
		
		Radius 12;
		Height 24;
		Speed 9;
		Health 100;
		PainSound "grunt/pain";
		damagefactor "Kick", 0.1;
		damagefactor "Melee", 0.1;
		damagefactor "punch", 0.1;
		PainChance "Kick", 255;
		PainChance "punch", 255;
		PainChance 255;
		damagefactor "trample", 2.0;
		+SHOOTABLE;
		+FLOORCLIP;
		//+NOBLOCKMAP
		+LOOKALLAROUND;
		+FRIGHTENED;
		+SOLID;
	}
	States
	{
		
		Spawn:
			NAHC B 1 A_Look;
			Goto See;
		See:
			NAHC ABCD 10 A_Chase;
			NAHC A 0 A_Pain;
			TNT1 A 0 A_SpawnItemEx("Brutal_FlyingBlood", 0, 0, 10, 0, 0);
			
			TNT1 A 0 doomb_random_death("one_death");
			Loop;
			
		death.one_death:
			TNT1 A 0 a_noblocking;
			NAHC EFGH 5;
			NAHC H -1;
			Stop;
			
		Death:
			TNT1 A 0 A_NoBlocking;
			TNT1 AAAAAAAAAAAA 0 A_SpawnProjectile ("SmallBrainPiece", 10, 0, random (0, 360), 2, random (0, 160));
			TNT1 AAAA 0 A_SpawnProjectile ("XDeath1", 10, 0, random (0, 360), 2, random (0, 160));
			NAHC IJKLMN 5;
			NAHC N -5;
			Stop;
			
		Pain.Kick:
		Pain.punch:
			TNT1 A 0 A_FaceTarget;
			NAHA A 1 A_Pain;
		Goto Fly;
		
		Pain.Explosive_Impact:
			TNT1 A 0 ThrustThingZ(0,50,0,1);
			NAHA A 2 A_FaceTarget;
		Goto Fly;

		Fly:
			NAHA ABCDEFGH 3 A_CheckFloor("See");
			tnt1 A 0 A_JumpIf (vel.z == 0, "See");
		Loop;
			
	}
}
