CLASS CrawlingDyingSpider : doomb_body_base { 
	Default {
		
		Radius 12;
		Height 24;
		Speed 9;
		Health 100;
		PainSound "grunt/pain";
		damagefactor "Kick", 0.1;
		damagefactor "Melee", 0.1;
		damagefactor "punch", 0.1;
		PainChance "Kick", 255;
		PainChance "punch", 255;
		PainChance 255;
		damagefactor "trample", 2.0;
		+SHOOTABLE;
		+FLOORCLIP;
		//+NOBLOCKMAP
		+LOOKALLAROUND;
		+FRIGHTENED;
		+SOLID;
	}
	States
	{
		
		Spawn:
		See:
			NAHC ABCD 10 A_Chase;
			NAHC A 0 A_Pain;
			TNT1 A 0 doomb_for_khorne("doomb_non_interactive_blood", "red_blood_trail", (0, 0, random(20, 30) ), (frandom(-5, 5), frandom(-5, 5), frandom(0, 5) ) );
			TNT1 A 0 doomb_random_death("one_death");
		Loop;
			
		death.one_death:
			TNT1 A 0 a_noblocking;
			NAHC EFGH 5;
			NAHC H -1;
		Stop;
			
		Death:
			TNT1 A 0 A_NoBlocking;
			TNT1 AAAAAAAAAAAA 0 doomb_severed_limb("SmallBrainPiece", "spawn", (0, 0, 10), doomb_random_velocity(5) );
			TNT1 AA 0 doomb_spawn_entrails( (0, 0, random(30, 35) ) );
			NAHC IJKLMN 5;
			NAHC N -5;
		Stop;
			
		Pain.Explosive_Impact:
			TNT1 A 0 ThrustThingZ(0,50,0,1);
		Pain.Kick:
		Pain.punch:
			TNT1 A 0 A_FaceTarget;
			NAHA A 1 A_Pain;
		Fly:
			NAHA ABCDEFGH 3 A_CheckFloor("See");
			tnt1 A 0 A_JumpIf (vel.z == 0, "See");
		Loop;
	}
}
