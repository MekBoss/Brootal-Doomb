			FZDB A 200;
			FZDB A 2;
			TNT1 A 0 A_PlaySound("ICEBRK1");
			FZDB A 50;
			FZDB B 2;
			FZDB A 50;
			FZDB B 2;
			FZDB A 50;
			FZDB B 2;
			FZDB A 25;
			FZDB B 2;
			FZDB A 25;
