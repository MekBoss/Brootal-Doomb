CLASS BUBULZ : ACTOR { 
	Default {
		
		Height 0;
		Radius 0;
		Mass 0;
		+Missile;
		+NoBlockMap;
		+NoGravity;
		+DontSplash;
		+FORCEXYBILLBOARD;
		+CLIENTSIDEONLY;
		+DOOMBOUNCE;
		+NOTELEPORT;
		RenderStyle "Add";
		Scale 0.5;
		Speed 2;
		
	}
	States
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 0 {frame = randompick(0, 1);}
		Spawn1:
			BUBL "#" 1 {vel.z += 1;}
			tnt1 a 0
			{
				If(waterlevel > 1) setstatelabel("spawn1");
			}
		Stop;
	}
}











