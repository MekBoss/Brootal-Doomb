CLASS LiquidParticleX : ACTOR { 
	Default {
		Height 1;
		Radius 1;
		Mass 0;
		+Missile;
		-NoGravity;
		+DontSplash;
		+DoomBounce;
		+FORCEXYBILLBOARD;
		+THRUACTORS;
		+CLIENTSIDEONLY;
		+NOTELEPORT;
		BounceFactor 0.1;
		Gravity 0.5;
		RenderStyle "Add";
		Scale 4.0;
		Alpha 0.4;
		//Speed 2
		decal "watersplash";
		Speed 7;
	}
	States
	{
		Spawn:
			TNT1 A 1;
			LIQU ABCDDDDDDDDDDDDDDDDDDD 4;
		Stop;
		
		Death:
			TNT1 A 1;
			TNT1 FFF 0 A_SpawnProjectile ("WaterParticleX", 2, random(-5,5), random (0, 360), 2, random (50, 140));
			TNT1 A 0;
		Stop;	
	}
}



CLASS WaterParticleXSpawner : ACTOR { 
	Default {
		
		Projectile;
		+RANDOMIZE;
		+FORCEXYBILLBOARD;
		+NOTELEPORT;
		// +BLOODSPLATTER 
		damage 0;
		radius 2;
		height 0;
		speed 40;
		renderstyle "Add";
		alpha 0.9;
		scale .15;
	}
	states
	{
		Spawn:
			TNT1 AAAAA 1 A_JumpIf(waterlevel < 1, "SurfaceSpawn");
			Stop;
			
		SurfaceSpawn:
			TNT1 AAAAAAAAAAAA 0 A_SpawnItem("SpawnLiquidParticleX");
			TNT1 AAAA 1 A_SpawnItem("SpawnLiquidParticleX");
		Stop;

		Death:
		Stop;
	}
}


