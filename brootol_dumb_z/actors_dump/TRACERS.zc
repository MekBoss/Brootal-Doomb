CLASS Tracer: doomb_boolet_base { 
	Default {
		
		Projectile;
		+RANDOMIZE;
		+FORCEXYBILLBOARD;
		+DONTSPLASH;
		+NOEXTREMEDEATH;
		+MISSILE;
		damage 0;
		radius 2;
		height 2;
		speed 140;
		renderstyle "Add";
		alpha 0.9;
		scale 0.15;
		
	}
	states
	{
		Spawn:
			TRAC A 1 BRIGHT;
			Loop;
		Death:
			tnt1 a 1;
		Stop;
	}
}

