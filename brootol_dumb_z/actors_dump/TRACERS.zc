}



CLASS MonsterTracer: Tracer { 
	Default {
		
		+BLOODSPLATTER;
		+THRUGHOST;
		-DONTSPLASH;
		speed 60;
		damagefunction (random(9,12));
		Decal "BulletDecalNew1";
		DamageType "MonsterBullet";
	}
	States
	{
		Spawn:
			TRAC A 1 BRIGHT;
			TNT1 A 0 ThrustThingZ(0,random(-8, 8),0,1);
			TRAC A 1 BRIGHT;
		Spawn2:
			TRAC A 1 BRIGHT;
			Loop;
			
		Death:
			TNT1 A 0 A_SpawnItemEx ("RicoChet",0,0,-5,0,0,0,0,SXF_NOCHECKPOSITION,0);
			Stop;
	}
}



